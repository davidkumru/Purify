<div class="navbar">
   <div class="home">
        <%= link_to "PURIFY", root_path %>
  </div>
  <div class="signin">
        <% if !user_signed_in? %>
           <%= link_to "Log In", new_user_session_path %>
           <em>&nbsp;|&nbsp;</em>
           <%= link_to "Sign Up", new_user_registration_path %>
        <% else %>
           <%= link_to current_user.handle, user_posts_path( current_user ) %>
           <em>&nbsp;|&nbsp;</em>
           <%= link_to "Log Out", destroy_user_session_path, :method => :delete %>
       <% end %>
   </div>
</div>
