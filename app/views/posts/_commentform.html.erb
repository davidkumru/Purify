<%= form_for Comment.new do |f| %>
    <div class="input-group col-xs-12">
      <div class="col-xs-8">Title <%= f.text_field :title, class: "form-control" %></div>
      <div class="col-xs-8">Content <%= f.text_area :content, class: "form-control" %></div>
      <div class="col-xs-4"><%= f.submit "Comment", class: "btn" %></div>
    </div>
<% end %>
